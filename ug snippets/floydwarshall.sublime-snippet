for (int k = 1; k <= n; ++k) {
	for (int i = 1; i <= n; ++i) {
		for (int j = 1; j <= n; ++j) {
			if (w[i][k] < INF && w[k][j] < INF)
				w[i][j] = min(w[i][j], w[i][k] + w[k][j]); 
		}
	}
}
]]></content>
