int dx[4] = {1, -1, 0, 0};
int dy[4] = {0, 0, 1, -1};

int n_rows, n_cols; // set these

bool gridcheck(int r, int c, int x, int y='*'){
	return (r>=0 && r<n_rows && c>=0 && c<n_cols && x!=y);
}
